<div class="contents row">
  <%= form_tag("/blogs/#{@article.id}", method: :patch ) do %>
    <p style="color: #99CC66; font-weight: 800;">
      編集しよう！
    </p>
    
    <p><input type="text" name="title" value="<%= @article.title %>" placeholder="タイトル" autofocus="true"></p>
    <p><input type="text" name="image" value="<%= @article.image %>" placeholder="Image Url" autofocus="true"></p>
    <p><textarea name="text" placeholder="どんな日だった？" rows="10" cols="30"><%= @article.text %></textarea></p>

    
    <input type="submit" value="再投稿しよう！">
  <% end %>
</div>