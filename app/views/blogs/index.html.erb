<ul class="list_article">
  <% @articles.each do |article| %>
  <li>
    <div class="article_one">
  
      <a>投稿者 <%= article.user.nickname %> </a>
      <a style="font-size: 31px; color: #33CC99; font-weight: 800;">「<%= article.title %>」</a>
      <p style="color: #33CC99;"><%= article.text %></p>
    
      <% if article.image != "" %>
        <p><img src="<%= article.image %>"></p>
      <% end %>
  
      <p style="color: #33CC99;"><%= article.created_at %></p>
    
      
      <div class="destroy_edit">
        <%= link_to '◇詳細見たい！', "/blogs/#{article.id}", method: :get %>
        <% if user_signed_in? && current_user.id == article.user_id %>
          <%= link_to '◇削除したい！', "/blogs/#{article.id}", method: :delete, data: { confirm: '本当に削除しますか？' } %>
          <%= link_to '◇編集したい！', "/blogs/#{article.id}/edit", method: :get %>
        <% end %> 
      </div>
  　
  　
  
    </div>
  </li>
  
  <% end %>
  <%= paginate(@articles) %>
</ul>